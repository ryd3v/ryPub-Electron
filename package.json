  "name": "rypub",
  "author": "Ryan Collins <hello@ryd3v.com>",
  "copyright": "Â© 2023 ryd3v.",
  "homepage": "https://ryd3v.com",
  "version": "2.0.5",
  "description": "ryPub Simple ePub Reader",
  "main": "src/main/main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "com.ryd3v.rypub",
    "directories": {
      "output": "build"
    },
    "linux": {
      "category": "Office",
      "icon": "src/images/book.png",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": "nsis",
      "publisherName": "Ryan Collins",
      "icon": "src/images/book.ico"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "epub": "^1.2.1",
    "epubjs": "^0.3.93"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4",
    "electron-builder-squirrel-windows": "^24.7.0",
    "tailwindcss": "^3.3.3",
    "xml2js": "^0.6.2"
  }
