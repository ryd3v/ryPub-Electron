{
  "name": "rypub",
  "author": "Ryan Collins",
  "version": "1.0.0",
  "description": "ePub reader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package-win": "electron-packager . rypub --overwrite --platform=win32 --arch=x64 --icon=./assets/icons/win/1024x1024.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName='rypub'",
    "package-linux": "electron-packager . rypub --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "epubjs": "^0.3.93"
  },
  "devDependencies": {
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "electron-packager": "^17.1.1"
  },
  "build": {
    "appId": "com.ryd3v.com",
    "win": {
      "target": "nsis",
      "icon": "./assets/icons/win/1024x1024.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
