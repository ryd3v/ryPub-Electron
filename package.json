{
  "name": "rypub",
  "version": "1.0.0",
  "description": "ePub reader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=x64 --prune=true --out=release-builds",
    "package-linux": "electron-packager . rypub --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "epubjs": "^0.3.93"
  },
  "devDependencies": {
    "electron": "^25.4.0",
    "electron-packager": "^17.1.1"
  }
}
