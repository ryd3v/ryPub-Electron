{
  "name": "rypub",
  "author": "Ryan Collins",
  "copyright": "Â© 2023, ryd3v.",
  "homepage": "https://ryd3v.com",
  "version": "1.0.2",
  "description": "ePub reader",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "epubjs": "^0.3.93"
  },
  "devDependencies": {
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "electron-packager": "^17.1.1"
  },
  "build": {
    "appId": "com.ryd3v.rypub",
    "productName": "ryPub",
    "directories": {
      "output": "build"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "../src/assets/icons/png/1024x1024.png",
      "category": "Office"
    },
    "win": {
      "icon": "./src/assets/icons/win/1024x1024.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
